<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">
  
  <targets>
    <!--Тестовый логгер удалить после выкладки-->
    <target xsi:type="File"
            name="testLog"
            fileName="${basedir}\logs\Test-Log-${shortdate}.log"
            layout="[START] ${longdate} | ${uppercase:${level}} | ${logger} | ${message}"
            />
    
    
    <!--Логгер событий базы данных-->
    <target xsi:type="File"
            name="dbLogFile"
            fileName="${basedir}\logs\DataBase-Log-${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${message}"
            />
    <!--Общий логгер-->
    <target xsi:type="File"
            name="generalLogFile"
            fileName="${basedir}\logs\General-Log-${shortdate}.log"
            layout="[START]${longdate} | ${uppercase:${level}} | ${logger} | ${message}"
            />
  </targets>
  <rules>
    <logger name="DBLogger" minlevel="Trace" writeTo="dbLogFile"></logger>
    <logger name="*" minlevel="Trace" writeTo="testLog"></logger>
  </rules>
</nlog>
