<header id="site-header">
    <div id="site-navigation-wrapper" class="row">
        <nav>
            <div id="site-navigation">
                <div id="site-navigation-left-block" class="col-md-2 col-sm-3">
                    <a href="~/"><img id="site-logo" height="150" width="100" src="~/Images/logo.svg" /></a>
                </div>
                <div id="site-navigation-central-block" class="hidden">
                </div>
                <div id="site-navigation-right-block" class="col-md-10 col-sm-9 hidden-xs">
                    <div id="header-contact-wrapper" class="row">
                        <div id="header-phones"><span>Ждем ваших звонков по номеру:</span><a href="tel:+7 (926) 035 88 16" class="phone">+7 (926) 035 88 16</a></div>
                    </div>
                    <div id="header-order-wrapper">
                        <button id="header-order-button" type="button">Заказать тур</button>
                    </div>
                    <div class="container hidden">
                        <span>Ждем ваших звонков по номеру:</span>
                        <a href="tel:+7 (926) 035 88 16" class="phone">+7 (926) 035 88 16</a>
                    </div>
                </div>
            </div>
            <div id="navigation-silver-string" class="row"></div>
            <div id="site-navigation-menu" class="row navbar navbar-default navbar-static">
                <div class="row">
                    <div class="navbar-header">
                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".js-navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="div-to-collapse" class="collapse navbar-collapse js-navbar">
                        <ul id="menu-items" class="nav navbar-nav ">
                            <div class="row">
                                <li><a href="~/">НА ГЛАВНУЮ</a></li>
                                <li><a href="~/Travel">ТУРЫ</a></li>
                                <li>РЕЧНЫЕ КРУИЗЫ</li>
                                <li>ГОРЯЩИЕ ТУРЫ</li>
                                <li>ВИЗЫ</li>
                                <li>ПАСПОРТА</li>
                                <li><a href="~/About">О КОМПАНИИ</a></li>
                                <li><a href="~/About/Contacts">КОНТАКТЫ</a></li>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        @if(HttpContext.Current.Request.Url.AbsolutePath=="/" || HttpContext.Current.Request.Url.AbsolutePath.StartsWith("/Tours"))
        {
        <div id="quick-search-wrapper" class="row">
            <div id="quick-search-container" class="container">
                <form id="quick-search-form" method="post" action="~/Travel">
                    <label id="quick-search-icon"></label>
                    <input id="quick-search-input" placeholder="Место назначения" type="text" name="where" />
                    <label id="quick-search-calendar-icon" class="disp-trig disp-false"></label>
                    <input id="quick-search-date-from" class="cal-trigger disp-trig disp-false" name="startdate" type="text" placeholder="Прибытие" />
                    <label id="quick-search-separator" class="disp-trig disp-false"></label>
                    <input id="quick-search-date-to" class="cal-trigger disp-trig disp-false" name="enddate" type="text" placeholder="Убытие" />
                    <div id="quick-search-button-container" class="disp-trig disp-false">
                        <div id="quick-search-bar"></div>
                        <input id="quick-search-button" class="button" type="submit" value="Найти" />
                    </div>
                </form>
                <div id="calendar-wrapper" class="cal-inactive cal-trigger  disp-trig">
                    @Html.Partial("~/Views/Shared/_CalendarPartial.cshtml")
                </div>
            </div>
        </div>
        }
    </div>
</header>
